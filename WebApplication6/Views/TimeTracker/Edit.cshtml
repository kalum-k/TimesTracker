@using Microsoft.AspNetCore.Identity
@using WebApplication6.Areas.Identity.Data
@model TimeTrackers;



@inject SignInManager<TimeSystemUser> SignInManager
@inject UserManager<TimeSystemUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
	<div class="container">
		<form method="post" asp-controller="TimeTracker"   asp-action="Edit">
			<div class="border p-3 mt-4">
				<div class="row pb-2">
					<h2 class="text-primary">Edit </h2>
					<hr />
				</div>
				@*<div asp-validation-summary="All"></div>*@
				<div class="mb-3">
					<input asp-for="CurrentDate" hidden class="form-control" />
					<span asp-validation-for="CurrentDate"  class="text-danger"></span>
				</div>
				<div class="mb-3">
					<input asp-for="TimeIn" hidden  class="form-control" />
					<span asp-validation-for="TimeIn"  class="text-danger"></span>
				</div>
				<div class="mb-3">
					<input asp-for="IdUser" value=@UserManager.GetUserId(User) hidden class="form-control" />
					<span asp-validation-for="IdUser" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary" id="@UserManager.GetUserId(User)"  style="width:150px">Button</button>
				<a asp-controller="TimeTracker" asp-route-id=@UserManager.GetUserId(User)  asp-action="Index" class="btn btn-secondary" style="width:150px">
					Back to List
				</a>
			</div>
		</form>
	</div>
}
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}