@using WebApplication6.Areas.Identity.Data
@model IEnumerable<TimeSystemUser>
@{
    ViewData["Title"] = "Users";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>@ViewData["Tittle"]</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">Users</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title">Datatables</h5>

                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.FirstName)</th>
                                    <th scope="col"> @Html.DisplayNameFor(model => model.LastName)</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                        <td><a asp-action="GetUserTime" class="btn btn-primary" asp-route-id="@item.Id"><i class="bi bi-clock"></i>time</a></td>
                                        <td><a asp-action="DeleteUser" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a></td>
                                        <td><a asp-action="" class="btn btn-info" asp-route-id="@item.Id"><i class="bi bi-file-earmark-text"></i>Details</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</main><!-- End #main -->
