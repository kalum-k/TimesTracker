                </div>

                <div class="card-body">
                  <h5 class="card-title">Reports <span>/Mount</span></h5>
                </div>
              </div>
            </div><!-- End Reports -->
            <!-- Recent Sales -->
            <div class="col-12">
              <div class="card recent-sales overflow-auto">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" asp-action="Index">Today</a></li>
                    <li><a class="dropdown-item" asp-action="IndexMonth">This Month</a></li>
                  </ul>
                </div>

                <div class="card-body">
                  <h5 class="card-title">Time Tracker<span> | Month</span></h5>

                  <table class="table table-borderless datatable">
                     <thead>
                  <tr>
                    <th scope="col" > @Html.DisplayNameFor(model => model.IdUser)</th>
                    <th acope="col"> @Html.DisplayNameFor(model => model.CurrentDate)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.TimeIn)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.TimeOut)</th>  
                  </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                  <tr>
                    <td ><a asp-controller="Admin" asp-route-id="@item.IdUser" asp-action="GetUserTime">@Html.DisplayFor(modelItem => item.IdUser)</a></td>
                    <td>@Html.DisplayFor(modelItem => item.CurrentDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.TimeIn)</td>
                    <td>@Html.DisplayFor(modelItem => item.TimeOut)</td>
                  </tr>
                    }
                </tbody>
                  </table>
                </div>
              </div>
            </div><!-- End Recent Sales -->
         
          </div>
