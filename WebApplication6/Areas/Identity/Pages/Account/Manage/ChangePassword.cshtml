@page
@model ChangePasswordModel
@inject SignInManager<TimeSystemUser> SignInManager
@inject UserManager<TimeSystemUser> UserManager

@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


<partial name="_StatusMessage" for="StatusMessage" />
<main id="main" class="main">
    <div class="pagetitle">
        <h1>@ViewData["Tittle"]</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Index"></a></>Users</li>
                <li class="breadcrumb-item active">Profile</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
        <div class="row">
            <div class="col-xl-4">
                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                        <i class="bi bi-twitter rounded-circle"></i>
                        <div class="social-links mt-2">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <h2>@UserManager.GetUserName(User)</h2>
                                <h3>@UserManager.GetUserId(User)</h3>
                            }
                            <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-xl-6">
                <div class="card">
                    <div class="card-body pt-3">
                        <!-- Bordered Tabs -->
                        <ul class="nav nav-tabs nav-tabs-bordered">

                            <li class="nav-item">
                                <a class="nav-link" href='/Identity/Account/Manage/'>Edit Profile</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link active  href='/Identity/Account/Manage/ChangePassword' data-bs-toggle="tab" data-bs-target="#change-password">Change Password</a>
                            </li>

                        </ul>
                        <div class="tab-content pt-2">

                            <div class="tab-pane fade show active profile-edit pt-3" id="profile-edit">

                                <!-- Profile Edit Form -->
                                <form id="change-password-form" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row mb-3">
                                        <label asp-for="Input.OldPassword" class="col-md-4 col-lg-3 col-form-label">OldPassword</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="Input.OldPassword" class="form-control" />
                                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="Input.NewPassword" class="col-md-4 col-lg-3 col-form-label">NewPassword</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="Input.NewPassword" class="form-control" />
                                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="Input.ConfirmPassword" class="col-md-4 col-lg-3 col-form-label">ConfirmPassword</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">Update password</button>
                                    </div>
                                </form>
                            </div>
                        </div><!-- End Bordered Tabs -->
                    </div>
                </div>

            </div>
    </section>
</main><!-- End #main -->
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
